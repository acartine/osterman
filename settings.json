{
  "alwaysThinkingEnabled": true,
  "comment": "Settings for Iteration 4 - With safety hook and telemetry",
  "enabledPlugins": {},
  "env": {
    "CLAUDE_TELEMETRY": "1"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/permission-handler.sh",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/post_telemetry.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/pre_safety_check.sh",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/pre_safety_check.sh",
            "type": "command"
          }
        ],
        "matcher": "mcp__shemcp__shell_exec"
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(aws:*)",
      "Bash(az:*)",
      "Bash(bd:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(cwd:*)",
      "Bash(curl:*)",
      "Bash(cut:*)",
      "Bash(date:*)",
      "Bash(docker:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(nc:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nslookup:*)",
      "Bash(openssl:*)",
      "Bash(poetry:*)",
      "Bash(ps:*)",
      "Bash(psql:*)",
      "Bash(pwd:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pytest:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(task:*)",
      "Bash(terraform:*)",
      "Bash(tee:*)",
      "Bash(test:*)",
      "Bash(timeout:*)",
      "Bash(tree:*)",
      "Bash(tsc:*)",
      "Bash(unzip:*)",
      "Bash(wc:*)",
      "Bash(wget:*)",
      "Bash(which:*)",
      "Bash(yarn:*)",
      "Bash(zip:*)",
      "Read",
      "Fetch",
      "WebFetch",
      "Grep",
      "Glob",
      "Edit",
      "Write",
      "WebSearch",
      "Skill(ship_with_review:*)",
      "mcp__chrome-devtools__*",
      "mcp__shemcp__*",
      "Task(*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits"
  }
}
