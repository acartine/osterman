      "Bash(which:*)",
      "Bash(yarn:*)",
      "Bash(zip:*)",
      "Read",
      "Grep",
      "Glob",
      "SlashCommand:/jswe:*",
      "SlashCommand:/swe:*",
      "SlashCommand:/dbg:*",
