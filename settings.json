{
  "env": {
    "CLAUDE_TELEMETRY": "1"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(awk:*)",
      "Bash(aws:*)",
      "Bash(az:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(cwd:*)",
      "Bash(curl:*)",
      "Bash(cut:*)",
      "Bash(date:*)",
      "Bash(docker:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(for:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(nc:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nslookup:*)",
      "Bash(openssl:*)",
      "Bash(poetry:*)",
      "Bash(ps:*)",
      "Bash(psql:*)",
      "Bash(pwd:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pytest:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(task:*)",
      "Bash(terraform:*)",
      "Bash(tee:*)",
      "Bash(test:*)",
      "Bash(timeout:*)",
      "Bash(tsc:*)",
      "Bash(unzip:*)",
      "Bash(wc:*)",
      "Bash(wget:*)",
      "Bash(which:*)",
      "Bash(yarn:*)",
      "Bash(zip:*)",
      "Read",
      "Fetch",
      "Grep",
      "Glob",
      "Edit",
      "Write",
      "Skill(ship_with_review:*)",
      "SlashCommand(/swe:*)",
      "SlashCommand(/dbg:*)",
      "SlashCommand(/arch:*)",
      "SlashCommand(/tl:*)",
      "SlashCommand(/pe:*)",
      "SlashCommand(/test-health:*)",
      "SlashCommand(/orient:*)",
      "SlashCommand(/doc:*)",
      "SlashCommand(/ship_with_review:*)",
      "mcp__chrome-devtools__*",
      "mcp__shemcp__*",
      "Task(*)"
    ],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/permission-handler.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre_safety_check.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post_telemetry.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "comment": "Settings for Iteration 4 - With safety hook and telemetry"
}
